<p id="notice"><%= notice %></p>

<h1>Short Links</h1>

<%= render 'form', short_link: @short_link %>

<table class="table">
  <thead>
    <tr>
      <th>Visited</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_links.each do |short_link| %>
      <tr>
        <td><%= short_link.visited %></td>
        <td><%= short_link.destination %></td>
        <td><%= button_to('Show', "/#{short_link.slug}", :class=> "btn btn-primary") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
