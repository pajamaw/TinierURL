<p id="notice"><%= notice %></p>

<h1>Short Links</h1>

<h1>New Short Link</h1>

<%= render 'form', short_link: @short_link %>

<table>
  <thead>
    <tr>
      <th>Slug</th>
      <th>Visited</th>
      <th>Destination</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @short_links.each do |short_link| %>
      <tr>
        <td><%= short_link.slug %></td>
        <td><%= short_link.visited %></td>
        <td><%= short_link.destination %></td>
        <td><%= link_to 'Show', short_link %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
